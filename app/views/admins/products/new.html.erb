<div class="form-body">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-2 col-md-5">
				<div class="box1">
					<h3><span>商品新規登録</span></h3>
				</div>
			</div>
		</div>

		<%= form_for(@product, url: admins_products_path) do |f| %>
		<div class="row">
			<div class="col-md-3">
				<%= f.attachment_field :image %>
			</div>
			<dic class="col-md-7">
				<div class="form-horizontal">
					<div class="form-group">
						<label for="name" class="col-md-2 control-label">商品名</label>
						<div class="col-md-5">
							<%= f.text_field :name, autofoucus: true, class: "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<label for="introduction" class="col-md-2 control-label">商品説明</label>
						<div class="col-md-5">
							<%= f.text_area :introduction, autofoucus: true, class: "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<label for="genre" class="col-md-2 control-label">商品名</label>
						<div class="col-md-5">
							<!-- f.f.collection_selectに修正！ -->
							<%= f.select :genre_id, [["ケーキ", "1"], ["プリン", "2"],["焼き菓子", "3"],["キャンディ", "4"]], include_blank: "選択して下さい", class: "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<label for="price" class="col-md-2 control-label">税込価格</label>
						<div class="col-md-5">
							<%= f.text_field :price, autofoucus: true, class: "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<label for="is_active" class="col-md-2 control-label">税込価格</label>
						<div class="col-md-5">
							<%= f.select :is_active, [["販売中", "true"], ["売り切れ", "false"]], include_blank: "選択して下さい"  %>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-offset-8 col-md-1">
				<div class="form-group">
					<%= f.submit "新規登録", class: "btn btn-info btn-md form-control" %>
				</div>
			</div>
		</div>

		<% end %>
	</div>
</div>