<div class="form-body">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-2 col-md-5">
				<div class="box2">
					<h3><span>商品一覧</span></h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-8 col-md-1">
				<a class="btn btn-default rounded-circle p-0" href="http://localhost:3000/admins/products/new" role="button">＋</a>
			</div>
		</div>
		<div class="row">
				<div class="col-md-9">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>商品ID</th>
								<th>商品名</th>
								<th>税込価格</th>
								<th>ジャンル</th>
								<th>ステータス</th>
							</tr>
						</thead>
						<tbody>
							<% @products.each do |product| %>
							<tr>
								<td><%= product.id %></td>
								<td><%= product.name %></td>
								<td><%= product.price %></td>
								<td><%= product.genre.name %></td>
								<% if product.is_active == true %>
									<td>販売中</td>
								<% else %>
									<td>売り切れ</td>
								<% end %>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
	</div>
</div>

