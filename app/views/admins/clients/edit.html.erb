<div class="form-body">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-2 col-md-5">
				<div class="box2">
					<h3><span><%= @client.last_name %><%= @client.first_name %> さんの会員情報編集</span></h3>
				</div>
			</div>
		</div>

		<div class="row">
			<%= form_for(@client, url:admins_client_path) do |f| %>
			<div class="col-md-10">
                <div class="form-horizontal">
                	<div class="form-group">
                		<label for="id" class="col-md-2 control-label">会員ID</label>
                		<div class="col-md-1">
                			<%= @client.id %>
                		</div>
                	</div>

                    <div class="form-group">
                    	<label for="last_name, first_name" class="col-md-2 control-label">氏名</label>
                        <div class="col-md-3">
                            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
                        </div>
                        <div class="col-md-3">
                            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                    	<label for="last_name_kana, first_name_kana" class="col-md-2 control-label">フリガナ</label>
                        <div class="col-md-3">
                            <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
                        </div>
                        <div class="col-md-3">
                            <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                    	<label for="postcode" class="col-md-2 control-label">郵便番号</label>
                        <div class="col-md-3">
                            <%= f.text_field :postcode, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="address" class="col-md-2 control-label">住所</label>
                        <div class="col-md-6">
	                         <%= f.text_field :address, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="telephone_number" class="col-md-2 control-label">電話番号</label>
                        <div class="col-md-3">
	                         <%= f.text_field :telephone_number, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="col-md-2 control-label">メールアドレス</label>
                        <div class="col-md-3">
	                         <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                    	<label for="is_deleted" class="col-md-2 control-label">会員ステータス</label>
                    	<div class="col-md-2">
                    		<label><%= f.radio_button :is_deleted, "false" %>有効会員</label>
                    	</div>
                    	<div class="col-md-2">
                    		<label><%= f.radio_button :is_deleted, "true" %>退会済み</label>
                    	</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
        	<div class="col-md-offset-1 col-md-2">
				<%= f.submit "編集を登録する", class: "btn btn-primary form-control" %>
			</div>
		<% end %>
		</div>
    </div>
</div>
