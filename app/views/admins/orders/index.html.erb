<div class="form-body">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-2 col-md-5">
				<div class="box2">
					<h3><span>注文履歴一覧</span></h3>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-10">
				<table class="table table-bordered">
					<thead>
						<tr class="active">
							<th>購入日時</th>
							<th>購入者</th>
							<th>注文個数</th>
							<th>注文ステータス</th>
						</tr>
					</thead>
					<tbody>
						<% @orders.each do |order| %>
						<tr>
							<td><%= link_to order.created_at.to_s(:datetime_jp), admins_order_path(order.id) %></td>
							<td><%= order.client.last_name %><%= order.client.first_name %></td>
								<% amount = 0 %>
								<% order.order_details.each do |order_detail| %>
								<% amount += order_detail.quantity %>
									<td><%= amount %></td>
								<% end %>
							<td><%= order.status %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
