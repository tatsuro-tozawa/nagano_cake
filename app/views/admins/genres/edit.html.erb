<div class="form-body">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-2 col-md-5">
				<div class="box1">
					<h3><span>ジャンル編集</span></h3>
				</div>
			</div>
		</div>
		<%= form_for(@genre, url: admins_genre_path) do |f| %>
			<div class="row">
				<div class="col-md-3">
					<div class="form-group">
						<label class="contral-label" for="name">ジャンル</label>
						<%= f.text_field :name, autofoucus: true, class: "form-control col-md" %>
					</div>
				</div>
				<div class="col-md-1">
					<input type="radio" name="is_active" value="有効">有効
				</div>
				<div class="col-md-1">
					<input type="radio" name="is_active" value="無効">無効
				</div>
				<div class="col-md-1">
					<div class="form-group">
						<%= f.submit "変更を保存", class: "btn btn-info btn-md" %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
