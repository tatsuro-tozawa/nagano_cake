<div class="form-body">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-2 col-md-5">
				<div class="box1">
					<h3><span>ジャンル一覧・追加</span></h3>
				</div>
			</div>
		</div>
		<%= form_for(@genre, url: admins_genres_path) do |f| %>
			<div class="row">
				<div class="col-md-3">
					<div class="form-group">
						<label class="contral-label" for="name">ジャンル</label>
						<%= f.text_field :name, autofoucus: true, class: "form-contral col-md" %>
					</div>
				</div>
				<div class="col-md-1">
					<input type="radio" name="is_active" value="有効">有効
				</div>
				<div class="col-md-1">
					<input type="radio" name="is_active" value="無効">無効
				</div>
				<div class="col-md-1">
					<div class="form-group">
						<%= f.submit "追加", class: "btn btn-info btn-md" %>
					</div>
				</div>
			</div>
		<% end %>
			<div class="row">
				<div class="col-md-6">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>ジャンル</th>
								<th>状態</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<% @genres.each do |genre| %>
								<td><%= genre.name %></td>
								<% if genre.is_active == true %>
									<td>有効</td>
								<% else %>
									<td>無効</td>
								<% end %>
								<td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-primary col-md" %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
	</div>
</div>

