<div class="form-body">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-2 col-md-5">
				<div class="box2">
					<h3><span>注文履歴一覧</span></h3>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<table class="table table-bordered">
					<thead>
						<tr class="active">
							<th>注文日</th>
							<th>配送先</th>
							<th>注文商品</th>
							<th>支払金額</th>
							<th>ステータス</th>
							<th>注文詳細</th>
						</tr>
					</thead>
					<tbody>
						<% @orders.each do |order| %>
						<tr>
							<td><%= order.created_at.to_s(:datetime_jp) %></td>
							<td><%= order.postcode + " " + order.address + " " + order.name %></td>
							<% sum_all = 0 %>
							<% order.order_details.each do |order_detail| %>
							<% sub_total = order_detail.price * order_detail.quantity %>
							<% sum_all += sub_total %>
							<td><%= order_detail.product.name %></td>
							<% end %>
							<td><% order.postage = 800 %><%= sum_all += order.postage %> 円</td>
							<td><%= order.status %></td>
							<td><%= link_to "表示する", clients_order_path(order), class: "btn btn-primary" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
