<%= render 'clients/genres/index', genres: @genres %>

<div class="col-md-10 space">
  	<div class="container">
    	<div class="row">
      		<div class="col-md-4 offset-md-2">
        		<%= attachment_image_tag(@product, :image, :fill, 560, 420, fallback: "no_img.jpg") %>
      		</div>
      		<div class="col-md-offset-2 col-md-4">
      			<div class="form-group">
        			<h3><strong><%= @product.name %></strong></h3>
        		</div>
        		<div class="form-group"><br>
        			<h4>商品説明</h4>
        			<%= @product.introduction %>
        		</div>
        		<div class="form-group"><br>
        			<h3><%= @product.price %>円(税込)</h3>
        		</div>
        		<%= form_with(model: [@product, @cart], local: true, url: {controller: 'cart_products', action: 'create'}) do |f| %>
    			<div class="form-group text-right"><br>
    				<%= f.label :ご購入個数 %>
    				<%= f.number_field :quantity, value: 1 ,min:1, max:99 %>個
    				<%= f.hidden_field :product_id, value: @product.id  %>
    				<%= f.submit "カートに入れる", class: "btn btn-primary" %>
    			</div>
    			<% end %>
        	</div>
      	</div>
    </div>
</div>
