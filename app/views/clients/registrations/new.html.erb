<div class="form-body">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-5">
                <div class="box2">
                    <h3><span>新規会員登録</span></h3>
                </div>
            </div>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "clients/shared/error_messages", resource: resource %>
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2 text-left">
                            <p><strong>名前</strong></p>
                        </div>
                        <label for="last_name" class="col-md-1 control-label">(姓)</label>
                        <div class="col-md-3">
                            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
                        </div>
                        <label for="first_name" class="col-md-1 control-label">(名)</label>
                        <div class="col-md-3">
                            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2 text-left">
                            <p><strong>フリガナ</strong></p>
                        </div>
                        <label for="last_name_kana" class="col-md-1 control-label">(セイ)</label>
                        <div class="col-md-3">
                            <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
                        </div>
                        <label for="first_name_kana" class="col-md-1 control-label">(メイ)</label>
                        <div class="col-md-3">
                            <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="col-md-2 text-left">メールアドレス</label>
                        <div class="col-md-offset-1 col-md-3">
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="postcode" class="col-md-2 text-left">郵便番号(ハイフンなし)</label>
                        <div class="col-md-offset-1 col-md-3">
                          <%= f.text_field :postcode, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="address" class="col-md-2 text-left">住所</label>
                        <div class="col-md-offset-1 col-md-6">
                          <%= f.text_field :address, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="telephone_number" class="col-md-2 text-left">電話番号(ハイフンなし)</label>
                        <div class="col-md-offset-1 col-md-3">
                          <%= f.text_field :telephone_number, autofocus: true, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="col-md-2 text-left">パスワード(6文字以上)</label>
                        <div class="col-md-offset-1 col-md-3">
                          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password_confirmation" class="col-md-2 text-left">パスワード(確認用)</label>
                        <div class="col-md-offset-1 col-md-3">
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
              <div class="col-md-offset-5 col-md-2">
                <%= f.submit "新規登録", class: "btn btn-success btn-md form-control" %>
              </div>
            </div>
        <% end %>
        </div>

        <div class="row">
            <div class="col-md-offset-3 col-md-5">
                <div class="box3">
                    <h3><span>既に登録がお済みの方</span></h3><br>
                    <p><%= link_to "こちら", new_client_session_path %> からログインしてください。</p>
                </div>
            </div>
        </div>

    </div>
</div>
