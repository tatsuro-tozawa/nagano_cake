<div class="form-body">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-2 col-md-5">
				<div class="box2">
					<h3><span>配送先編集</span></h3>
				</div>
			</div>
		</div>

		<div class="row">
			<%= form_with(model: @address, url:clients_address_path, local: true) do |f| %>
			<div class="col-md-10">
				<div class="form-horizontal">
					<div class="form-group">
						<label for="postcode" class="col-md-3 text-left">郵便番号(ハイフンなし)</label>
						<div class="col-md-3">
							<%= f.text_field :postcode, class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<label for="address" class="col-md-3 text-left">住所</label>
						<div class="col-md-6">
							<%= f.text_field :address, class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<label for="name" class="col-md-3 text-left">宛名</label>
						<div class="col-md-3">
							<%= f.text_field :name, class: "form-control" %>
						</div>
						<div class="col-md-offset-3 col-md-2">
							<%= f.submit '更新する', class: "btn btn-success form-control" %>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>